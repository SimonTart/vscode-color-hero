{
	"name": "color-variable",
	"publisher": "zengxb94",
	"displayName": "Color-Variable",
	"description": "replace color value with color variable name",
	"version": "0.3.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "color-variable",
			"properties": {
				"colorVar.onSave": {
					"type": "boolean",
					"default": false,
					"description": "保存时是否自动替换"
				},
				"colorVar.alertWarning": {
					"type": "boolean",
					"default": false,
					"description": "找不到对应变量名是否警告"
				}
			}
		},
		"commands": [
			{
				"command": "extension.colorVarReplace",
				"title": "color-variable: replace"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"postcss": "^7.0.27",
		"postcss-color-variable": "^0.4.1",
		"postcss-less": "^3.1.4",
		"postcss-scss": "^2.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SimonTart/vscode-color-variable"
	}
}
